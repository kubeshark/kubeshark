{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": 0,
		"max-statements-per-line": [2, { "max": 2 }],
		"max-statements": [2, 22],
		"multiline-comment-style": 1,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"AddEntriesFromIterable",
				"CreateDataPropertyOrThrow",
				"Get",
				"GetIterator",
				"IsArray",
				"IteratorStep",
				"IteratorClose",
				"IteratorValue",
				"ThrowCompletion",
				"ToPropertyKey",
				"Type",
				"RequireObjectCoercible",
			],
		}],
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"no-invalid-this": 1,
			},
		},
	],
}
